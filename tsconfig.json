  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "declaration": true,
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
